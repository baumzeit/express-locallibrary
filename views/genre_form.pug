extends layout

block content
	h1 #{title}

	form(method='POST' action='')
		div.form-group
			label(for='name') Genre:
			input#name.form-control(type='text', placeholer='Fantasy, Poetry etc.' name='name' value=(undefined===genre ? '' : genre.name), required='true')
		button.btn.btn-primary(type='submit') submit

	if errors
		ul(style='margin-top:20px')
			for error in errors
				li
					span.text-warning !{error.msg}